#include <iostream>
using namespace std;
int main(int argc, const char * argv[])
{
    //倒直角三角形
    for(int i = 5 ; i >=1;i--) //決定輸出幾層
    {
        for(int k = 1 ; k<=5-i;k++) //根據外層的數量輸出左邊空白
        {
            cout << " ";

        }
        for(int j = 1 ; j <=i ; j++) //輸出星號
        {
            cout << "*";
        }

    cout << endl ;
    }
    
    
    //正直角三角形
    cout << endl ;
    for(int i = 1 ; i <=5;i++) //決定輸出幾層
    {
        for(int k = 1 ; k<=5-i;k++) //根據外層的數量輸出左邊空白
        {
            cout << " ";
            
        }
        for(int j = 1 ; j <=i ; j++) //輸出星號
        {
            cout << "*";
        }
        
        cout << endl ;
    }
    
    cout << endl ;

    //菱形
    for(int i = 1 ; i<=5 ; i ++) //輸出正三角形，決定輸出幾行
    {
        for(int k = 1 ; k <= 5-i ; k++) //決定輸出幾個空白
        {
            cout << " " ;
        }
        for(int j = 1 ; j<=2*i-1 ; j ++)//輸處＊號
        {
            cout << "*";
        }
        cout << endl ;
    }
    for(int i = 4 ; i>=1 ; i --) //輸出倒三角形，數量少正三角輸出行-1
    {
        for(int k = 5-i ; k >= 1 ; k--)//輸出空白
        {
            cout << " " ;
        }
        for(int j = 1 ; j<=(2*(i-1)+1) ; j ++) //輸出星號
        {
            cout << "*";
        }
        cout << endl ;
    }

    
    
    
    return 0;
}
